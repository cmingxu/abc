= form_for(app) do |f|
  - if app.errors.any?
    #error_explanation
      %h2
        = pluralize(app.errors.count, "error")
        prohibited this app from being saved:
      %ul
        - app.errors.full_messages.each do |message|
          %li= message
  .field
    = f.label :id
    = f.text_field :id
  .field
    = f.label :node_id
    = f.number_field :node_id
  .field
    = f.label :raw_response
    = f.text_area :raw_response
  .actions
    = f.submit
